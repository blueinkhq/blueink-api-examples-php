{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/prismjs@1/themes/prism-tomorrow.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/prismjs@1/plugins/line-numbers/prism-line-numbers.css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="{{ blueink_embed_js_url }}" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1/components/prism-core.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1/plugins/autoloader/prism-autoloader.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1/plugins/line-numbers/prism-line-numbers.min.js"></script>
    <script>
        feather.replace()
    </script>
{% endblock %}

{% block body %}
    {% block header %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="d-flex flex-grow-1">
                <a class="navbar-brand p-2 d-inline-block" href="/">
                    <img src="{{ asset('img/blueink-logo.png') }}" class="blu-logo mw-100 d-lg" alt="BlueInk Logo" />
                    <span class="align-bottom blu-logotext">API Examples</span>
                </a>
                <div class="w-100 text-right">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bluNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </div>
            <div class="collapse navbar-collapse flex-grow-1 text-right" id="bluNavbar">
                <ul class="navbar-nav ml-auto flex-nowrap">
                    <li class="nav-item">
                        <a href="https://blueink.com" class="nav-link m-2 menu-item">BlueInk Website</a>
                    </li>
                    <li class="nav-item">
                        <a href="https://blueink.com/api-docs/" class="nav-link m-2 menu-item">API Docs</a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endblock %}

    {% block main_wrap %}
        <main role="main">
            {% block main_top %}{% endblock %}
            {% block main %}{% endblock %}
        </main>
    {% endblock %}

    {% block footer %}
        <div class="container">
            <footer class="pt-4 my-md-5 pt-md-5 border-top">
                <div class="row">
                    <div class="col-12 col-md-4">
                        <img src="{{ asset('img/blueink-logo.png') }}" class="blu-logo mw-100 d-lg" alt="BlueInk Logo" />
                    </div>
                    <div class="col-12 col-md-8">
                        <p class="text-muted blu-text-small">
                            This demo site is built with the <a href="https://symfony.com/">Symfony framework</a>,
                            but any PHP framework (or plain PHP) will do. In addition, this demo site uses
                            <a href="https://getbootstrap.com/">Bootstrap 4</a> and
                            <a href="https://feathericons.com/">Feather Icons</a>
                        </p>
                    </div>
                </div>
            </footer>
        </div>
    {% endblock %}
{% endblock %}